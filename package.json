{
  "name": "cyrius-tech-test",
  "version": "0.0.0",
  "scripts": {
    "up": "docker-compose -f docker/compose.yml --profile infra up -d --renew-anon-volumes",
    "down": "docker-compose -f docker/compose.yml down",
    "bdd": "mkdir -p reports && cucumber-js",
    "bdd:watch": "nodemon --watch features/ --watch src/ --ext feature,ts --exec 'npm run bdd'",
    "bdd:cover": "nyc --report-dir reports/bdd-coverage npm run bdd",
    "contract": "mocha -r ts-node/register 'contract/**/*.ts' --check-leaks",
    "contract:watch": "npm run contract -- -w --watch-files 'contract/**/*.ts,src/**/*.ts'",
    "contract:cover": "nyc --report-dir reports/contract-coverage npm run contract",
    "doc": "mkdir -p docs ; aglio -i blueprint/index.md -o docs/api.html --theme-variables slate",
    "doc:watch": "nodemon --watch blueprint/ -e md -x 'npm run doc'",
    "lc": "dotenv -e env/${ENV}.env -- npm run",
    "dev": "nodemon --watch src/ --ext ts --exec 'ts-node src'",
    "prebdd": "npm run ts:migrate",
    "precontract": "npm run ts:migrate",
    "ts:migrate": "ts-node src/scripts/migrate"
  },
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "8.6.0",
    "@cucumber/pretty-formatter": "1.0.0",
    "@types/amqplib": "^0.8.2",
    "@types/chai": "4.3.3",
    "@types/chai-subset": "^1.3.3",
    "@types/ip": "^1.1.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/koa": "^2.13.5",
    "@types/koa-router": "^7.4.4",
    "@types/koa__cors": "^3.3.0",
    "@types/luxon": "^3.0.1",
    "@types/mocha": "10.0.0",
    "@types/supertest": "2.0.12",
    "chai": "4.3.6",
    "chai-subset": "^1.6.0",
    "dotenv-cli": "^6.0.0",
    "mocha": "10.0.0",
    "nodemon": "2.0.20",
    "nyc": "15.1.0",
    "supertest": "6.3.0",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "optionalDependencies": {
    "aglio": "^2.3.0"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "amqplib": "^0.10.3",
    "ip": "^1.1.8",
    "joi": "^17.7.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.4",
    "koa-body": "^6.0.1",
    "koa-router": "^12.0.0",
    "luxon": "^3.2.1",
    "mongodb": "^4.11.0",
    "nanoid": "^3"
  }
}
